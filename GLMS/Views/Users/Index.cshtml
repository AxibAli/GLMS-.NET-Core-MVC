@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser<int>>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

@*no need for site.css made a custom css file Named as "glms_styles.css" it will be use through out the whole project add custom css code in this file.*@
<link href="~/css/glms_styles.css" rel="stylesheet" asp-append-version="true" />

<h1>User List</h1>
<br />
<table class="table table-striped" id="userTable">
    <thead>
        <tr>
            <th>
                User
            </th>
            <th>
                Email
            </th>
            <th style="width:10%">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            <a>
                                @user.UserName
                            </a>
                            <br>
                            <small>
                                @user.Id
                            </small>
                        </div>
                    </div>
                </td>
                <td>
                    <a>
                        @user.Email
                    </a>
                </td>
                <td>
                    <div class="dropdown">
                        <a class="btn btn-secondary text-white dropdown-toggle" style="font-size:14px;" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-wrench"></i>Actions
                        </a>

                        <ul class="dropdown-menu" style="background-color:lightgray;" aria-labelledby="dropdownMenuLink">
                            <li>
                                <a class="nav-link text-dark" style="font-size:14px;" asp-route-userId="@user.Id" asp-controller="UserRoles" asp-action="Index">Manage User Roles</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" style="font-size:14px;" asp-route-userId="@user.Id" asp-controller="UserRoles" asp-action="Update">Edit</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" style="font-size:14px;" asp-route-userId="@user.Id" asp-controller="UserRoles" asp-action="Delete">Delete</a>
                             </li>
                            
                        </ul>
                    </div>
                </td>
            </tr>
        }
        
    </tbody>
</table>
<br />

<a asp-controller="Home" asp-action="Index" style="width:100px" class="btn btn-primary">
    Back
</a>

